<odoo>
    <record id="action_web_order" model="ir.actions.act_window">
        <field name="name">Web Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="domain" eval="[('team_id', '=', ref('vision_web_team'))]"/>
        <field name="context" eval="{'default_team_id': ref('vision_web_team')}"/>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service order.
            </p>
        </field>
    </record>

    <record id="action_blanket_contract" model="ir.actions.act_window">
        <field name="name">Blanket Contracts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="domain" eval="[('team_id', '=', ref('vision_blanket_team')), ('blanket','=', True)]"/>
        <field name="context" eval="{'default_team_id': ref('vision_blanket_team'), 'default_blanket': 1}"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service order.
            </p>
        </field>
    </record>

    <record id="action_blanket_order" model="ir.actions.act_window">
        <field name="name">Blanket Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="domain" eval="[('team_id', '=', ref('vision_blanket_team')), ('blanket','=', False)]"/>
        <field name="context" eval="{'default_team_id': ref('vision_blanket_team'), 'default_blanket': 0}"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service order.
            </p>
        </field>
    </record>

    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">vision sale form</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <data>
                <header position="inside">
                    <button name='action_approve' type="object" string='Approve' attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('team_id', 'in', [3,4])]}"/>
                    <button name='action_new_related_order' type="object" string='New order' attrs="{'invisible': [('blanket', '=', False)]}" class="btn_primary"/>
                </header>

                <button name="action_cancel" position="replace">
                    <button name="action_cancel" states="draft,approved,sent,sale" type="object" string="Cancel"/>
                </button>

                <button name="action_confirm" position="replace">
                    <button name="action_confirm" string="Confirm Sale" type="object" attrs="{'invisible': [('state', 'not in', ['approved'])]}"/>
                </button>


                <field name='state' position='replace'>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,sent,sale"/>
                </field>

                <div name='button_box' position='inside'>
                    <button name="action_view_related_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o"
                            string='Related orders'
                            attrs="{'invisible': [('blanket', '=', False)]}">
                    </button>
                </div>

                <field name="name" position='replace'>
                    <field name='name' class='oe_read_only'/>
                </field>

                <field name='user_id' position='before'>
                    <field name='blanket'/>
                </field>

            </data>

        </field>
    </record>

</odoo>