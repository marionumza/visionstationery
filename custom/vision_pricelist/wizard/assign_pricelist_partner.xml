<odoo>
    <data>
        <record id="assign_pricelist_partner_form" model="ir.ui.view">
            <field name="name">Assign Customer to Pricelist</field>
            <field name="model">assign.pricelist.partner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="pricelist_id" invisible="1"/>
                            <field name="partner_id"/>
                        </group>
                    </group>

                    <footer>
                        <button name="action_assign" string="Assign" type="object" class="btn-primary"/>
                        <button name="cancel" string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>

</odoo>